<div style="background: url(/images/travelbdg1.jpg)" class="page-holder bg-cover">
  <div class="col-md-12">
    <div class="addtrip-page">
  <div class="form-add">
    <form class="container-trip">
    <h2 clas="m-2">Add Trip</h2>

    <form class="form new-trip-form">
      
      <div class="form-group m-2">
        <label for="start-date">Start Date</label>
        <input class="form-input" type="date" id="start-date"/>
      </div>

      <div class="form-group m-2">
        <label for="end-date">End Date</label>
        <input class="form-input" type="date" id="end-date"/>
      </div>

       <div class="form-group m-2">
        <label for="trip-destination_ID">Destination</label>
        <select id="trip-destination_ID" name="trip-destination_ID"/>
        {{#each destinations as |destination|}}
          <option value={{destination.id}}>{{destination.location_name}}</option>
        {{/each}}
        </select>
      </div>

      <div class="form-group m-2">
        <label for="trip-budget">Trip Budget</label>
        <input class="form-input" type="number" id="trip-budget"/>
      </div>

      <div class="form-group m-2">
        <label for="hotel-cost">Hotel Costs</label>
        <input class="form-input" type="number" id="hotel-cost"/>
      </div>

      <div class="form-group m-2">
        <label for="food-cost">Food Costs</label>
        <input class="form-input" type="number" id="food-cost"/>
      </div>

      <div class="form-group m-2">
        <label for="ent-cost">Entertainment Costs</label>
        <input class="form-input" type="number" id="ent-cost"/>
      </div>

      <div class="form-group m-2">
        <label for="misc-cost">Miscellaneous Costs</label>
        <input class="form-input" type="number" id="misc-cost"/>
      </div>

      <div class="form-group m-2">
        <label for="transport-cost">Tranportation Costs</label>
        <input class="form-input" type="number" id="transport-cost"/>
      </div>

      <button type="submit" class="btn btn-light m-2">Submit</button>  
      </form>
    </form>
    </br>
    </div>
    </div>
    </div>
  </div>
</div>
  
<script src="js/addTrip.js"></script>