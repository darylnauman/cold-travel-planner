<!-- Header with image -->
<div style="background: url(/images/travelbdg1.jpg)" class="page-holder bg-cover">
  <div class="container py-5">
    <header class="text-center text-white py-5">

      <h1 class="display-1 font-weight-bold mb-5">Comments for {{comments.[0].destination.location_name}}</h1>
    </header>
  </div>

  <section class="container">
  
  <section class="flex-row justify-center">    
    {{#each comments as |comment|}}
    {{> comments-details}}
    {{/each}}
  </section>

  <form class="form new-comment-form">

    <div class="form-group m-2">
      <label for="new-comment"></label>
      <input class="form-input" type="text" id="new-comment"/>
    </div>

    <button type="submit" class="btn btn-light m-2">Add Comment</button>  
      
</form>

  <div>
    <p>
    </p>
  </div>
</section>
</div>

<script src="../../js/addComment.js"></script>